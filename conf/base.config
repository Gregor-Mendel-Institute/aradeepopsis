/* -------------------------------------------------
 * Nextflow config file for araDeepopsis
 * -------------------------------------------------
 */

env {
  PYTHONPATH = "${PYTHONPATH}:$baseDir/bin"
  TF_CPP_MIN_LOG_LEVEL = 2
}

process {
  withName: build_records {
    container = 'quay.io/beckerlab/aradeepopsis-base:dev'
    cpus = 1
    memory = 2.GB
    time = 1.h
  }
  withName: run_predictions {
    container = 'quay.io/beckerlab/aradeepopsis-base:dev'
    cpus = 2
    memory = params.multiscale ? 12.GB : 6.GB
    time = 4.h
  }
  withName: run_predictions_DPP {
    container = 'quay.io/beckerlab/aradeepopsis-dpp:dev'
    cpus = 2
    memory = 2.GB
    time = 4.h
  }
  withName: extract_traits {
    container = 'quay.io/beckerlab/aradeepopsis-base:dev'
    cpus = 1
    memory = 2.GB
    time = 1.h
  }
  withName: draw_diagnostics {
    container = 'quay.io/beckerlab/aradeepopsis-base:dev'
    cpus = 1
    memory = 2.GB
    time = 1.h
  }
  withName: launch_shiny {
    container = 'quay.io/beckerlab/aradeepopsis-shiny:dev'
  }
}
