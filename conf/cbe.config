/* -------------------------------------------------
 * Nextflow config file for CBE 
 * -------------------------------------------------
 */

singularity.cacheDir = '/resources/containers'

process {
  executor = 'slurm'
  module = 'build-env/2020:anaconda3/2019.10'
  queue = 'c'
  clusterOptions = { task.time <= 1.h ? '--qos rapid' : task.time <= 8.h ? '--qos short': task.time <= 48.h ? '--qos medium' : '--qos long' }

  errorStrategy = { task.exitStatus in [104,134,135,137,139,140,143] ? 'retry' : 'finish' }
  maxRetries = 3

  withName: RECORDS {
    cpus = { 1 * task.attempt }
    memory = { 1.GB * task.attempt }
    time = { 1.h * task.attempt }
  }
  withName: MODEL {
    cpus = { 4 * task.attempt }
    memory = { 32.GB * task.attempt }
    time = { 4.h * task.attempt }
  }
  withName: DPP {
    cpus = { 4 * task.attempt }
    memory = { 16.GB * task.attempt }
    time = { 2.h * task.attempt }
  }
  withName: MEASURE {
    cpus = { 1 * task.attempt }
    memory = { 1.GB * task.attempt }
    time = { 1.h * task.attempt }
  }
  withName: SUMMARY {
    cpus = { 1 * task.attempt }
    memory = { 2.GB * task.attempt }
    time = { 1.h * task.attempt }
  }
}
